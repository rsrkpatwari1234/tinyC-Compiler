			$$=new Array();
			update_nextinstr();
			$$->type=$1->type->arrtype;				// type=type of element	
			update_nextinstr();			
			$$->Array=$1->Array;						// copy the base
			update_nextinstr();
			$$->loc=gentemp(new symboltype("int"));		// store computed address
			update_nextinstr();
			$$->atype="arr";						//atype is arr.
